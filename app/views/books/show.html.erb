
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books detail</h1>
      <table class="table table-striped">
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></br>
            <%= link_to @user.name, user_path %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>