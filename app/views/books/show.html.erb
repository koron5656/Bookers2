<p>Bookshowページ</p>
<p>Books detail</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <p>Books detail</p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td>
              <% if user.image.attached? %>
                <%= image_tag user.image, size: "200x200" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            </td>
            <% @book.each do |book| %>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>