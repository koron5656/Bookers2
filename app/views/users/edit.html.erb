<div class ="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName"%></br>
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :intoroduction, autofocus: true, id:"inputIntoroduction"%></br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>